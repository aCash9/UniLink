<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/pink"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_centerInParent="true"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/graphic"
            android:layout_marginTop="60dp"
            android:layout_width="281dp"
            android:layout_height="182dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/logingraphic"
            android:contentDescription="@string/image"
            />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:background="@drawable/closeicon"
            android:contentDescription="this is cross button" />

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_marginTop="40dp"
            android:layout_below="@id/graphic"
            android:layout_width="wrap_content"
            android:paddingStart="50dp"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkpink"
                android:text="Welcome\nBack!"
                android:textSize="50sp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/montserrat_semibold"
                />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_below="@id/text"
                android:fontFamily="@font/montserrat"
                android:textSize="18sp"
                android:paddingEnd="5dp"
                android:textColor="@color/lightblack"
                android:inputType="textEmailAddress"
                android:background="@drawable/custom_edit_text"
                android:textColorHint="@color/lightblack"
                android:hint="Email Address"
                app:drawableEndCompat="@drawable/emailicon"
                tools:ignore="RtlSymmetry" />


            <LinearLayout
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/email"
                android:background="@color/black"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_below="@+id/line"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/montserrat"
                android:textSize="18sp"
                android:textColor="@color/lightblack"
                android:background="@drawable/custom_edit_text"
                android:textColorHint="@color/lightblack"
                android:hint="Password"
                android:paddingEnd="5dp"
                android:inputType="textPassword"
                app:drawableEndCompat="@drawable/lockicon"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:layout_below="@id/password"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat"
                android:textAllCaps="false"
                android:layout_marginEnd="50dp"
                android:background="@drawable/custom_entry_btn_1"/>

            <Button
                android:id="@+id/forgotPassword"
                android:textStyle="bold"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Forgot Password?"
                android:layout_marginEnd="50dp"
                android:layout_below="@id/loginbtn"
                android:textColor="@color/lightblack"
                android:textSize="15sp" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>